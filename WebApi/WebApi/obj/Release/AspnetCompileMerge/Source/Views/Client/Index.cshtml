<script type="text/html" id="areasListTemplate">

    <table>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
        </tr>

        {{ for(var i=0; i < it.length; i++) { }}
        <tr>
            <td>{{=it[i].Id}}</td>
            <td>{{=it[i].Nombre}}</td>
        </tr>
        {{ } }}

    </table>

</script>